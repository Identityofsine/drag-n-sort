{
  "compilerOptions": {
		"include": ["src"], /* Include only the src directory */
		"exclude": ["node_modules", "dist"] /* Exclude the node_modules directory */
			"compilerOptions": {
			"module": "esnext",
			"lib": ["dom", "esnext", "node"],
			"importHelpers": true,
			"declaration": true,
			"sourceMap": true,
			"rootDir": "./src",
			"outDir": "./dist/esm",
			"strict": true,
			"noImplicitReturns": true,
			"noFallthroughCasesInSwitch": true,
			"noUnusedLocals": true,
			"noUnusedParameters": true,
			"moduleResolution": "node",
			"jsx": "react",
			"esModuleInterop": true,
			"skipLibCheck": true,
			"forceConsistentCasingInFileNames": true,  	
		}
  }
}
