{
	"include": ["src"], /* Include only the src directory */
	"exclude": ["node_modules", "dist"], /* Exclude the node_modules directory */
	"compilerOptions": {
		"module": "esnext",
		"lib": ["dom", "esnext", "es2021"],
		"importHelpers": true,
		"declaration": true,
		"sourceMap": true,
		"rootDir": "./src",
		"outDir": "./dist/esm",
		"strict": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"moduleResolution": "node",
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,  	
	}
}
